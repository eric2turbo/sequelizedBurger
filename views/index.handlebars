

<div class="container">
    
    <div class="jumbotron" align="center">
        <h1>EAT-DA-BURGERS!</h1>
        <img class="img-responsive burger" src="./burger.png" alt="Burger">
    </div>

    <div class="row">
        <div class="col-md-6">
        <h2>Uneaten</h2>

            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <h3><li>
                            {{this.name}}
                            </h3>
                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="true">
                                <button type="submit">DEVOUR IT</button>
                            </form>
                            
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2>Eaten</h2>
            <ol>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <h3><li>
                            {{this.name}}
                        
                        </li></h3>
                    {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
    <div class="row" align="center">
        <h2>Add a Burger</h2>
        <form action="/" method="POST">
            <input type="text" id="ba" name="name">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">ORDER UP</button>
        </form>

        <p>Enter a burger you want to eat.  Click the button.</p>
    </div>

</div>

